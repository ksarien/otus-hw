{
    "info": {
      "name": "saga-idempotency-tests",
      "_postman_id": "saga-idempotency-tests",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "1. Create order with idempotency key",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Accept", "value": "application/json" },
            { "key": "Content-Type", "value": "application/json" },
            { "key": "X-User-Id", "value": "1" },
            { "key": "Idempotency-Key", "value": "key1" }
          ],
          "url": {
            "raw": "{{baseUrl}}/api/orders",
            "protocol": "http",
            "host": ["arch", "homework"],
            "path": ["api", "orders"]
          },
          "body": {
            "mode": "raw",
            "raw": "{\"items\":[{\"item_id\":1,\"quantity\":1,\"price\":50.00}],\"total_amount\":50.00,\"delivery_date\":\"2025-05-07\",\"slot_id\":1}"
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Status is 201', () => pm.response.to.have.status(201));",
                "pm.environment.set('response1', pm.response.text());"
              ],
              "type": "text/javascript"
            }
          }
        ]
      },
      {
        "name": "2. Repeat order with same key",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Accept", "value": "application/json" },
            { "key": "Content-Type", "value": "application/json" },
            { "key": "X-User-Id", "value": "1" },
            { "key": "Idempotency-Key", "value": "key1" }
          ],
          "url": {
            "raw": "{{baseUrl}}/api/orders",
            "protocol": "http",
            "host": ["arch", "homework"],
            "path": ["api", "orders"]
          },
          "body": {
            "mode": "raw",
            "raw": "{\"items\":[{\"item_id\":1,\"quantity\":1,\"price\":50.00}],\"total_amount\":50.00,\"delivery_date\":\"2025-05-07\",\"slot_id\":1}"
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Status is 201', () => pm.response.to.have.status(201));",
                "pm.test('Response identical', () => pm.response.text() === pm.environment.get('response1'));"
              ],
              "type": "text/javascript"
            }
          }
        ]
      },
      {
        "name": "3. Create new order without key",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Accept", "value": "application/json" },
            { "key": "Content-Type", "value": "application/json" },
            { "key": "X-User-Id", "value": "1" }
          ],
          "url": {
            "raw": "{{baseUrl}}/api/orders",
            "protocol": "http",
            "host": ["arch", "homework"],
            "path": ["api", "orders"]
          },
          "body": {
            "mode": "raw",
            "raw": "{\"items\":[{\"item_id\":2,\"quantity\":1,\"price\":100.00}],\"total_amount\":100.00,\"delivery_date\":\"2025-05-08\",\"slot_id\":2}"
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Status is 201', () => pm.response.to.have.status(201));",
                "pm.environment.set('orderId2', pm.response.json().order_id);"
              ],
              "type": "text/javascript"
            }
          }
        ]
      },
      {
        "name": "4. Repeat new order without key",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Accept", "value": "application/json" },
            { "key": "Content-Type", "value": "application/json" },
            { "key": "X-User-Id", "value": "1" }
          ],
          "url": {
            "raw": "{{baseUrl}}/api/orders",
            "protocol": "http",
            "host": ["arch", "homework"],
            "path": ["api", "orders"]
          },
          "body": {
            "mode": "raw",
            "raw": "{\"items\":[{\"item_id\":2,\"quantity\":1,\"price\":100.00}],\"total_amount\":100.00,\"delivery_date\":\"2025-05-08\",\"slot_id\":2}"
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Status is 201', () => pm.response.to.have.status(201));",
                "pm.test('New orderId differs', () => pm.response.json().order_id !== pm.environment.get('orderId2'));"
              ],
              "type": "text/javascript"
            }
          }
        ]
      }
    ],
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://arch.homework"
      }
    ]
  }
  